# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# get keyWord from searchPage form and pass to TweetSearchController
GET     /searchPage                 controllers.TweetSearchController.searchByKeyWord(keyWord: String ?= "hello")

# get #user_id from user click and route to TweetSearchController
GET     /personalTweetPage          controllers.TweetSearchController.getPersonalTweet(id: Long )




# An example controller showing a sample home page
#GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
#GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
#GET     /message                    controllers.AsyncController.message

# practice routes
# name will pass as parameter to index2
#Extract the page parameter from the path
#GET     /practice/index/:name             controllers.PracticeController.index2(name: String)

# Extract the page parameter from the query String
#Get     /practice                   controllers.PracticeController.index2(name: String)

# redirect action to other action (From contorllers.PracticeController.index3 to index2)
#GET     /practice/:name        controllers.PracticeController.index3(name: String, age=3)

#GET      /practice/index4       controllers.PracticeController.index4